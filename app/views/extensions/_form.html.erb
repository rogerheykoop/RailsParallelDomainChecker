<%= simple_form_for(@extension, html: { class: 'form-horizontal' }) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value=> "#{f.object.new_record? ? "Create extension" : "Update extension"}", :class=>"btn btn-primary" %>
  </div>
<% end %>

